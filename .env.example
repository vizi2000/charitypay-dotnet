# CharityPay Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
DB_PASSWORD=charitypay_password_2024
DB_HOST=charitypay-db
DB_PORT=5432
DB_NAME=charitypay
DB_USER=charitypay_user

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_password_2024
REDIS_HOST=charitypay-redis
REDIS_PORT=6379

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long-please-change-this
JWT_ISSUER=CharityPay
JWT_AUDIENCE=CharityPay-Users
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# Fiserv Payment Gateway Configuration
# =============================================================================
FISERV_API_KEY=your-fiserv-api-key
FISERV_API_SECRET=your-fiserv-api-secret
FISERV_BASE_URL=https://cert.api.firstdata.com
FISERV_STORE_ID=your-store-id
FISERV_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# Application URLs
# =============================================================================
WEBHOOK_BASE_URL=https://yourdomain.com
FRONTEND_BASE_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# =============================================================================
# Environment Settings
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
DOTNET_ENVIRONMENT=Production

# =============================================================================
# Monitoring & Analytics
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# =============================================================================
# Email Configuration (Future use)
# =============================================================================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_NAME=CharityPay
SMTP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=Information
LOG_PATH=/app/logs

# =============================================================================
# Security Headers
# =============================================================================
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;

# =============================================================================
# Performance Configuration
# =============================================================================
CACHE_DURATION_MINUTES=60
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# =============================================================================
# Development Settings (use .env.dev for development)
# =============================================================================
# Uncomment for development
# ASPNETCORE_ENVIRONMENT=Development
# DB_PASSWORD=dev_password_123
# JWT_SECRET=development-jwt-secret-key-for-testing-purposes-only
# FISERV_BASE_URL=https://cert.api.firstdata.com
# WEBHOOK_BASE_URL=http://localhost:5000
# FRONTEND_BASE_URL=http://localhost:3000