# Database Configuration
POSTGRES_DB=charitypay
POSTGRES_USER=charitypay_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://charitypay_user:your_secure_password_here@postgres:5432/charitypay

# JWT Configuration
JWT_SECRET_KEY=your_very_long_secret_key_at_least_32_characters_long
